<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="UsoDeLayoutsTrujillo.FlexLayout"
             Title="FlexLayout">

    <FlexLayout
        Direction="Column"
        AlignItems="Stretch"
        JustifyContent="SpaceBetween">

        <Label Text="Header"
               FontSize="18"
               BackgroundColor="Aqua"
               HorizontalTextAlignment="Center"
               ></Label>


        <Button Text="Click me!"
                BackgroundColor="RosyBrown"
                ImageSource="https://i.ytimg.com/vi/nf_njLxQqeI/maxresdefault.jpg"
                ContentLayout="Top, 10"
                Margin="5"/>

        <ImageButton Source="https://i.ytimg.com/vi/nf_njLxQqeI/maxresdefault.jpg"
                     HeightRequest="50"
                     WidthRequest="50"
                     BackgroundColor="Transparent"
                     Clicked="OnImageButtonClicked"/>


        <Label Text="FOOTER"
               FontSize="18"
               BackgroundColor="Pink"
               HorizontalTextAlignment="Center"
               VerticalOptions="End"/>

    </FlexLayout>
</ContentPage>